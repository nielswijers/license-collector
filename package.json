{
  "name": "license-collector",
  "version": "0.1.0",
  "description": "a license collector for npm and bower dependencies",
  "repository": "nielswijers/license-collector",
  "author": "niels wijers",
  "license": "MIT",
  "keywords": [],
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb/base",
    "rules": {
      "max-len": 1
    }
  },
  "dependencies": {
    "babel-polyfill": "6.7.4",
    "babel-runtime": "^6.6.1",
    "bluebird": "3.3.4",
    "colors": "1.1.2",
    "commander": "2.9.0",
    "glob-all": "3.0.1",
    "js-yaml": "3.5.5",
    "jsonfile": "2.2.3"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-eslint": "^6.0.2",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.7.2",
    "bower": "1.7.9",
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.6.0",
    "eslint-config-airbnb": "6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "istanbul": "^1.0.0-alpha.2",
    "jscs": "2.11.0",
    "mocha": "^2.4.5",
    "proxyquire": "1.7.4",
    "rimraf": "^2.5.2",
    "sinon": "^2.0.0-pre",
    "sinon-chai": "2.8.0",
    "yamljs": "0.2.7"
  },
  "bin": {
    "license-collector": "./bin/license-collector"
  },
  "scripts": {
    "test:install": "npm run test:install:npm && npm run test:install:bower",
    "test:install:npm": "for d in ./test/fixtures/*/package.json; do (cd $(dirname \"${d}\") && npm install); done",
    "test:install:bower": "for d in ./test/fixtures/*/bower.json; do (cd $(dirname \"${d}\") && bower install); done;",
    "lint": "eslint src test",
    "test": "mocha --compilers js:babel-register",
    "test:watch": "mocha --compilers js:babel-register --reporter min --watch",
    "test:cover": "babel-node ./node_modules/istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "build": "rimraf lib && babel src --out-dir lib",
    "publish": "rimraf lib && babel src --out-dir lib",
    "publish:docs": "easystatic deploy docs --repo nielswijers/license-collector",
    "start": "easystatic start docs"
  }
}
